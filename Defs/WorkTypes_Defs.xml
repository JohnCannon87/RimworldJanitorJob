    <WorkGiverDef>
        <defName>CleanFilth_Janitor</defName>
        <label>clean filth</label>
        <giverClass>WorkGiver_CleanFilth</giverClass>
        <workType>Janitorial</workType>
        <verb>clean</verb>
        <gerund>cleaning</gerund>
        <priorityInType>20</priorityInType>
        <requiredCapacities>
            <li>Manipulation</li>
        </requiredCapacities>
